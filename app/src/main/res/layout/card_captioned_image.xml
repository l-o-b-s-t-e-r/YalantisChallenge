<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    tools:context="first.task.yalantis.yalantischallenge.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <first.task.yalantis.yalantischallenge.SquareView
            android:id="@+id/info_image1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:src="@drawable/droid1"
            android:layout_marginRight="2dp"
            android:onClick="onEveryClick" />

        <first.task.yalantis.yalantischallenge.SquareView
            android:id="@+id/info_image2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:src="@drawable/droid2"
            android:layout_marginLeft="2dp"
            android:onClick="onEveryClick" />

    </LinearLayout> </android.support.v7.widget.CardView>